---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const initialCards = {
	todo: [
		{ id: 'card1', title: 'Social Integration', description: 'Implement cross-posting to social platforms' },
		{ id: 'card2', title: 'AI Interview Flow', description: 'Complete the interview-to-post workflow' },
		{ id: 'card3', title: 'Analytics Integration', description: 'Add privacy-focused analytics' }
	],
	doing: [
		{ id: 'card4', title: 'Documentation Site', description: 'Building comprehensive documentation' },
		{ id: 'card5', title: 'Project Status Board', description: 'Creating interactive Kanban board' }
	],
	done: [
		{ id: 'card6', title: 'Dark Theme', description: 'Implement consistent dark theme styling' },
		{ id: 'card7', title: 'Blog Setup', description: 'Initialize Astro-based blog framework' },
		{ id: 'card8', title: 'Deployment', description: 'Configure Vercel deployment' }
	]
};
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 3rem 0;
				background: var(--theme-bg);
				color: var(--theme-text);
			}
			.content {
				width: 1200px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
			h1 {
				margin-bottom: 1rem;
			}
			.subtitle {
				color: var(--theme-text-light);
				font-size: 0.9em;
				margin-bottom: 2rem;
				padding: 0.75rem;
				background: var(--theme-bg-accent);
				border-radius: 0.5rem;
				border-left: 4px solid var(--accent);
			}
			.board {
				display: grid;
				grid-template-columns: repeat(3, 1fr);
				gap: 1rem;
				margin-top: 2rem;
			}
			.column {
				background: var(--theme-bg-accent);
				border-radius: 0.5rem;
				padding: 1rem;
			}
			.column-header {
				font-size: 1.2em;
				font-weight: 600;
				margin-bottom: 1rem;
				padding-bottom: 0.5rem;
				border-bottom: 2px solid var(--theme-divider);
			}
			.card {
				background: var(--theme-bg);
				border: 1px solid var(--theme-divider);
				border-radius: 0.5rem;
				padding: 1rem;
				margin-bottom: 1rem;
				transition: transform 0.2s ease;
			}
			.card:hover {
				transform: translateY(-2px);
			}
			.card h3 {
				margin: 0 0 0.5rem 0;
				font-size: 1em;
			}
			.card p {
				margin: 0;
				font-size: 0.9em;
				color: var(--theme-text-light);
			}
			.last-updated {
				text-align: right;
				font-size: 0.8em;
				color: var(--theme-text-light);
				margin-top: 2rem;
			}
			@media (max-width: 768px) {
				.board {
					grid-template-columns: 1fr;
					gap: 2rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="content">
				<h1>Project Status</h1>
				<div class="subtitle">
					ðŸ¤– This board is managed by the AI Buddy system. Status updates are made automatically based on development progress and conversations.
				</div>
				<div class="board">
					<div class="column" data-column="todo">
						<div class="column-header">To Do</div>
						{initialCards.todo.map(card => (
							<div class="card" data-id={card.id}>
								<h3>{card.title}</h3>
								<p>{card.description}</p>
							</div>
						))}
					</div>
					<div class="column" data-column="doing">
						<div class="column-header">Doing</div>
						{initialCards.doing.map(card => (
							<div class="card" data-id={card.id}>
								<h3>{card.title}</h3>
								<p>{card.description}</p>
							</div>
						))}
					</div>
					<div class="column" data-column="done">
						<div class="column-header">Done</div>
						{initialCards.done.map(card => (
							<div class="card" data-id={card.id}>
								<h3>{card.title}</h3>
								<p>{card.description}</p>
							</div>
						))}
					</div>
				</div>
				<div class="last-updated">
					Last updated: March 15, 2025 at 11:14 PM EDT
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
