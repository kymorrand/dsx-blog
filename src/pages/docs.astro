---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const docs = [
	{
		title: "Architecture & Principles",
		items: [
			{
				name: "Core Principles",
				description: "Key architectural decisions and guiding principles for DSX",
				sections: [
					"Open Source First: Prioritizing open-source tools and frameworks",
					"Data Interoperability: Ensuring data portability",
					"Markdown-Centric: Using markdown as primary content format",
					"Iterative Development: Building incrementally",
					"Framework Agnostic: Avoiding deep coupling"
				]
			}
		]
	},
	{
		title: "Systems & Components",
		items: [
			{
				name: "AI Buddy System",
				description: "Conversational interface for blog post generation",
				sections: [
					"Interview Management",
					"Content Generation",
					"Post Formatting",
					"Publishing Pipeline"
				]
			},
			{
				name: "Content Structure",
				description: "Organization of blog posts and documentation",
				sections: [
					"MDX Integration",
					"Frontmatter Schema",
					"Asset Management"
				]
			}
		]
	},
	{
		title: "Development Workflow",
		items: [
			{
				name: "Build Process",
				description: "Steps for building and deploying the site",
				sections: [
					"Local Development",
					"Vercel Deployment",
					"Node.js Version Management"
				]
			}
		]
	}
];
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
				padding: 3rem 0;
				background: var(--theme-bg);
				color: var(--theme-text);
			}
			.content {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
			.section {
				margin-bottom: 3rem;
			}
			.section-title {
				font-size: 2em;
				margin-bottom: 1.5rem;
				color: var(--theme-text);
				border-bottom: 1px solid var(--theme-divider);
				padding-bottom: 0.5rem;
			}
			.doc-item {
				background: var(--theme-bg-accent);
				border-radius: 0.5rem;
				padding: 1.5rem;
				margin-bottom: 1.5rem;
				box-shadow: 0 2px 8px rgba(var(--accent-dark), 10%);
			}
			.doc-item h3 {
				margin: 0 0 0.5rem 0;
				color: var(--theme-text);
			}
			.doc-item p {
				margin: 0 0 1rem 0;
				color: var(--theme-text-light);
			}
			.doc-sections {
				list-style: none;
				padding: 0;
				margin: 0;
			}
			.doc-sections li {
				padding: 0.5rem 0;
				border-top: 1px solid var(--theme-divider);
				color: var(--theme-text);
			}
			.doc-sections li:first-child {
				border-top: none;
				padding-top: 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="content">
				<h1>Documentation</h1>
				{docs.map((section) => (
					<div class="section">
						<h2 class="section-title">{section.title}</h2>
						{section.items.map((item) => (
							<div class="doc-item">
								<h3>{item.name}</h3>
								<p>{item.description}</p>
								<ul class="doc-sections">
									{item.sections.map((section) => (
										<li>{section}</li>
									))}
								</ul>
							</div>
						))}
					</div>
				))}
			</div>
		</main>
		<Footer />
	</body>
</html>
