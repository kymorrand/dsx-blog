---
interface Props {
  builderId: string;
}

const { builderId } = Astro.props;
---

<div class="buddy-container">
  <form id="buddy-form" class="buddy-form">
    <div class="buddy-question">
      <h3>What was your main focus or goal for today's work on DSX?</h3>
      <p class="question-type">Type: progress</p>
    </div>

    <div class="buddy-answer">
      <textarea
        name="answer"
        class="answer-input"
        placeholder="Share your thoughts..."
        required
      ></textarea>
      <button type="submit" class="submit-button">Submit</button>
    </div>
  </form>

  <div id="completion-message" class="buddy-complete" style="display: none;">
    <h3>Interview Complete!</h3>
    <p>
      Thanks for sharing your progress. Your blog post is being generated and will be published shortly.
    </p>
  </div>
</div>

<style>
  .buddy-container {
    margin: 1rem 0;
  }

  .buddy-question {
    padding: 1rem;
    background-color: var(--theme-bg-accent);
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }

  .buddy-question h3 {
    font-size: 1.125rem;
    font-weight: 500;
    margin: 0 0 0.5rem 0;
  }

  .question-type {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0;
  }

  .buddy-answer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .answer-input {
    width: 100%;
    height: 8rem;
    padding: 0.5rem;
    border: 1px solid var(--theme-divider);
    border-radius: 0.5rem;
    font-family: inherit;
    font-size: inherit;
    background-color: var(--theme-bg);
    color: var(--theme-text);
  }

  .answer-input:focus {
    outline: none;
    border-color: var(--theme-accent);
  }

  .submit-button {
    padding: 0.5rem 1rem;
    background-color: var(--theme-accent);
    color: var(--theme-bg);
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    font-weight: 500;
    align-self: flex-start;
  }

  .submit-button:hover:not(:disabled) {
    background-color: var(--theme-accent-dark);
  }

  .submit-button:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .buddy-complete {
    padding: 1rem;
    background-color: var(--theme-success-bg);
    border-radius: 0.5rem;
  }

  .buddy-complete h3 {
    color: var(--theme-success);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .buddy-complete p {
    color: var(--theme-success-text);
    margin: 0;
  }
</style>

<script>
  // Simple client-side form handling
  const form = document.getElementById('buddy-form') as HTMLFormElement;
  const completionMessage = document.getElementById('completion-message');

  if (form && completionMessage) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      const answer = formData.get('answer');

      // TODO: Send answer to server
      console.log('Answer submitted:', answer);

      // Show completion message and hide form
      form.style.display = 'none';
      completionMessage.style.display = 'block';
    });
  }
</script>
